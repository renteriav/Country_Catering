<% item_categories.each do |key, value| %>
  <% @items_by_category = @items.where("category = ?", value) %>
  <% if @items_by_category.any? %>
<table class="category_header">
  <tr class="category_header">
      <td><%= key %></td>
  </tr>
</table>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Unit</th>
      <th>Proportion</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items_by_category.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.unit %></td>
        <td><%= item.proportion %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger bold" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<% end %>

<br>

<%= link_to 'New Item', new_item_path %>
